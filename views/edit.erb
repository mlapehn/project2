  <input name="pokemon[name]" value='<%= "#{@pokemon.name}" %>'>

  <label for="pokemon[candy]">Candies:</label>
  <input name="pokemon[candy]" value='<%= "#{@pokemon.candy}" %>'>

  <label for="pokemon[evolve]">Evolve:</label>
  <input name="pokemon[evolve]" value='<%= "#{@pokemon.evolve}" %>'>

  <label for="pokemon[pokemoncount]">Pokemoncount:</label>
